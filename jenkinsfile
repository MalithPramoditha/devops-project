pipeline {
    agent any 

    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'master', url: 'https://github.com/MalithPramoditha/devops-project.git'
                }
            }
        }
        stage('Build Backend Docker Image') {
            steps {  
                dir('api') {
                    bat 'docker build -t malithpramoditha/devops-backend:%BUILD_NUMBER% .'
                }
            }
        }
        stage('Build Frontend Docker Image') {
            steps {
                dir('client') {
                    bat 'docker build -t malithpramoditha/devops-frontend:%BUILD_NUMBER% .'
                }
            }
        }
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'devops-project-pw', variable: 'devops-project-pw')]) {
                    script {
                        bat "docker login -u malithpramoditha -p %devops-project-pw%"
                    }
                }
            }
        }
        stage('Push Backend Image to Docker Hub') {
            steps {
                bat 'docker push malithpramoditha/devops-backend:%BUILD_NUMBER%'
            }
        }
        stage('Push Frontend Image to Docker Hub') {
            steps {
                bat 'docker push malithpramoditha/devops-frontend:%BUILD_NUMBER%'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}
